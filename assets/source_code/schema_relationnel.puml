@startuml
hide circle
hide method
skinparam classAttributeIconSize 0
skinparam RectangleBackgroundColor white

class customer {
{static} id_customer: integer
firstname: varchar
lastname: varchar
birth_date: date
}

class order {
{static} id_order: integer
num: integer
date_order: datetime
#id_customer:integer
}

class product {
{static} id_product: integer
ref:string
designation:text
#id_supplier:integer
}

class supplier {
{static} id_supplier: integer
name: varchar
phone: varchar
}

class order_line {
{static} #id_product:integer
{static} #id_order: integer
quantity: integer
}

class tag {
{static} id_tag: integer
tag: varchar(26)
}

class product_tag {
{static} #id_tag: integer
{static} #id_product: integer
}

class price {
{static} id: integer
price: integer
start_date: datetime
end_date: datetime|null
#id_product: integer
}

customer <-- order
supplier <-- product
product <-- order_line
order <-- order_line
product_tag --> product
product_tag --> tag
product <-- price

@enduml